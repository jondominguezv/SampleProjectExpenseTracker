
@model PersonalExpenseTrackerWeb.Models.TransactionModel

<div class="text-center">
    <h1 class="display-4">Create or edit an expense</h1>
</div>

<form asp-action="SubmitTransactionForm" asp-controller="Home">
    <label class="mt-4">Category</label>
    <input class="form-control" type="" placeholder="" asp-for="CategoryId" />
    <label class ="mt-4">Value $</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Amount" step="0.01" />
    <label class="mt-4">Date</label>
    <input class="form-control" type="date" placeholder="today" asp-for="Note" />
    <label class="mt-4">Note</label>
    <input class="form-control" type="text" placeholder="" asp-for="Note" />

    <button class="btn btn-primary mt-4" type="submit">Submit</button>
</form>